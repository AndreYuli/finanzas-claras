generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//transación financiera
model Transaction {
  id          Int       @id @default(autoincrement())
  description String
  amount      Decimal   // Usamos Decimal para manejar dinero con precisión
  category    String
  date        DateTime
  type        TxnType   // El tipo de transacción: INGRESO o GASTO

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum TxnType{
  INCOME
  EXPENSE
}